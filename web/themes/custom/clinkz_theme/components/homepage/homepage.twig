{#
/**
 * @file
 * Template for homepage component.
 */
#}
<div class="homepage">
  {# Full-screen Lottie animation background #}
  <div class="homepage__background">
    <div class="lottie-animation"
         data-animation-path="{{ base_path ~ directory }}/src/assets/lotties/animation5.json"
         data-loop="true"
         data-autoplay="true">
    </div>
  </div>

  {# Content container #}
  <div class="homepage__container">
    <div class="homepage__content">
      {% if title %}
        <h1 class="homepage__title">
          <span class="homepage__title-line">{{ title }}</span>
          {% if subtitle %}
            <span class="homepage__title-line homepage__title-line--accent">{{ subtitle }}</span>
          {% endif %}
        </h1>
      {% endif %}

      {% if description %}
        <div class="homepage__description">
          {{ description|raw }}
        </div>
      {% endif %}

      {% if social_links %}
        <div class="homepage__social">
          {% for link in social_links %}
            <a href="{{ link.url }}"
               class="homepage__social-link"
               target="_blank"
               rel="noopener noreferrer"
               aria-label="{{ link.label }}">
              <i class="icon icon--{{ link.icon }}"></i>
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>